generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String     @id @default(cuid())
  email     String     @unique
  username  String     @unique
  password  String
  country   String?
}

model Document {
  docId     String    @id @default(cuid())
  title     String
  content   String
  pdfFile   Bytes?
  pdfSize   Int?
  pdfName   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
